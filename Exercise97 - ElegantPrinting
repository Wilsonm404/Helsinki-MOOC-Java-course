
public class Main {

    public static void main(String[] args) {
        // test method here
        int[] array = {5, 1, 3, 4, 2};
        printElegantly(array);
    }

    public static void printElegantly(int[] array) {
        // Write code here
        
        int explicitPosition = 0;
        
        for(int iterator : array)
            {
                explicitPosition += 1;
                System.out.print(iterator);
            
                if(explicitPosition != (array.length))
                    {
                        System.out.print("," + " ");
                    }
            }
    }
}
