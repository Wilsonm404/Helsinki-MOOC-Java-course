
public class Player 
{
    private String name;
    private int goals;
    
    public Player(String playerName)
        {
            this.name = playerName;
            this.goals = 0;
        }
    
    public Player(String playerName,int playerGoals)
        {
            this.name = playerName;
            this.goals = playerGoals;
        }
    
    public String getName()
        {
            return this.name;
        }
    
    public int goals()
        {
            return this.goals;
        }
    
    public String toString()
        {
            return this.name + "," + " " + "goals" + " " + this.goals;
        }
    
}
