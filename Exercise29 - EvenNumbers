
public class EvenNumbers {

    public static void main(String[] args) {
        // Write your code here
        
        int incrementingInteger = 1;
        
        while(incrementingInteger <= 100)
            {
                if(incrementingInteger % 2 == 0)
                    {
                        System.out.println(incrementingInteger);
                    }
                incrementingInteger++;
            }
    }
}
